@page
@model MedasGardening.pages_Gardens.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Garden</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Garden.ID" />
            <div class="form-group">
                <label asp-for="Garden.Title" class="control-label"></label>
                <input asp-for="Garden.Title" class="form-control" />
                <span asp-validation-for="Garden.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Garden.plantingDate" class="control-label"></label>
                <input asp-for="Garden.plantingDate" class="form-control" />
                <span asp-validation-for="Garden.plantingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Garden.TypeOfGarden" class="control-label"></label>
                <input asp-for="Garden.TypeOfGarden" class="form-control" />
                <span asp-validation-for="Garden.TypeOfGarden" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Garden.PriceOfSeeds" class="control-label"></label>
                <input asp-for="Garden.PriceOfSeeds" class="form-control" />
                <span asp-validation-for="Garden.PriceOfSeeds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
